<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itbiye.mapper.GoodsMapper">
    <!--动态sql-->
    <select id="list" resultType="com.itbiye.pojo.Goods">
        select * from goods
        <where>

            <if test="warehouseId!=null">
                warehouse_id=#{warehouseId}
            </if>

            <if test="state!=null">
                and state=#{state}
            </if>


            and create_user=#{userId}
        </where>
    </select>
</mapper>